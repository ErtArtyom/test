<h2>Input Data</h2>
<form>
    <div class="form-group row">
        <label class="col-3 col-form-label">Phone Number</label>
        <div class="col-9">
            <input class="form-control" type="text" value="{{ input['phonenumber']|escape('html') }}" readonly>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-3 col-form-label">Default Country</label>
        <div class="col-9">
            <input class="form-control" type="text" value="{{ input['country']|escape('html') }}" readonly>
        </div>
    </div>
    {% if input['language'] %}
        <div class="form-group row">
            <label class="col-3 col-form-label">Language</label>
            <div class="col-9">
                <input class="form-control" type="text" value="{{ input['language']|escape('html') }}" readonly>
            </div>
        </div>
    {% endif %}
    {% if input['region'] %}
        <div class="form-group row">
            <label class="col-3 col-form-label">Region</label>
            <div class="col-9">
                <input class="form-control" type="text" value="{{ input['region']|escape('html') }}" readonly>
            </div>
        </div>
    {% endif %}
</form>
